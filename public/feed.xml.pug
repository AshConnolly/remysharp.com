---
layout: false
permalink: feed.xml
---

- posts = collections.blog.slice(0, 50)

doctype xml
rss(version='2.0'
  xmlns:content='http://purl.org/rss/1.0/modules/content/'
  xmlns:wfw='http://wellformedweb.org/CommentAPI/'
  xmlns:dc='http://purl.org/dc/elements/1.1/'
  xmlns:atom='http://www.w3.org/2005/Atom'
  xmlns:sy='http://purl.org/rss/1.0/modules/syndication/'
  xmlns:slash='http://purl.org/rss/1.0/modules/slash/')
  channel
    title= site_title
    atom:link(href=`${ site_url }/feed/` rel="self" type="application/rss+xml")
    link= site_url
    description= site_description
    lastBuildDate #{ moment(posts[0].date).format('ddd, DD MMM YYYY HH:mm:ss +0000') }
    language en-US
    sy:updatePeriod hourly
    sy:updateFrequency 1

    each post in posts
      item
        title= post.data.title
        guid(isPermaLink="false")= post.slug
        link= site_url + post.url
        - var body = post.output
        pubDate= moment(post.data.date).format('ddd, DD MMM YYYY HH:mm:ss +0000')
        description <![CDATA[!{ body.replace(/<h1>.*?<\/h1>/, '').split('<!--more-->')[0].replace(/(<([^>]+)>)/ig, '').trim() }]]>
        content:encoded <![CDATA[!{ body.replace(/<h1>.*?<\/h1>/, '').replace(/<!--more-->\s+?/m, '<p><a href="https://terminal.training/?utm_source=feed&utm_medium=banner&utm_campaign=remysharp-ad1"><img src="' + site_url + '/images/inline-cli-course.png"></a>').replace(/<img(.*?)src="\//g, '<img$1src="' + site_url + '/').replace(/<a href="\//g, '<a href="' + site_url + '/') }<p><em>Originally published on <a href="#{ site_url }#{ post.url }">Remy Sharp's b:log</a></em></p>]]>
