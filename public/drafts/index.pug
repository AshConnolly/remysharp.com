- ready = 0;
- posts = collections.drafts.map(function (post) {
-   if (post.data.complete) ready++;
-   return post
- })

p
  em #{ready} posts ready to publish.

ul
  for post in posts
    if (post.data.title)
      li(class=post.data.inprogress || post.data.complete ? 'active' : 'inactive')
        a(href=`${post.url}`)= post.data.title
        small.date Last edited: #{ moment( post.data.modified ).format('D-MMM YYYY')}
        if (post.data.inprogress)
          small.inprogress in progress
        else if (post.data.complete)
          small.ready ready
