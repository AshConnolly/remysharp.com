.post-content
  p Below are all the newsletters I've sent since 2017. You can subscribe to receive these directly to your email too, or <a href="#content">skip to view the complete archive</a>.
  script(async id="_ck_231094" src="https://forms.convertkit.com/231094?v=6")

- last = null
- year = null
- index = 0;
- post = collections.newsletters[0]
a(name="content")
while post
  if post.data.date
    if !year || moment(post.data.date).format('YYYY') == year
      - month = moment(post.data.date).format('MMMM')
      - postYear = moment(post.data.date).format('YYYY')
      if !year && last != postYear
        h1.title= postYear
        - last = postYear
      .post-content
        ul
          while post && (!postYear || moment(post.data.date).format('YYYY') == postYear)
            if post && post.data.date
              li
                a(href=`/newsletters/${ post.slug }/`)= moment(post.data.date).format('MMMM')
            - post = collections.newsletters[index += 1];
    else
      - post = collections.newsletters[index += 1];
  else
    - post = collections.newsletters[index += 1];
